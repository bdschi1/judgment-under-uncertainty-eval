# API Keys for running evaluations
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# OpenAI API (for running evals against GPT models)
OPENAI_API_KEY=sk-...

# Anthropic API (for running evals against Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Optional: Organization IDs
OPENAI_ORG_ID=
ANTHROPIC_ORG_ID=

# Eval Configuration
# Default model for evaluations
DEFAULT_EVAL_MODEL=gpt-4-turbo
# DEFAULT_EVAL_MODEL=claude-3-opus-20240229

# Output directory for eval results
EVAL_OUTPUT_DIR=./outputs

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# Optional: Max concurrent requests
MAX_CONCURRENT_REQUESTS=5
